{
  "name": "guardian-core",
  "version": "1.0.0",
  "private": true,
  "description": "Guardian Core personal Claude assistant. Lightweight, secure, customizable.",
  "type": "module",
  "scripts": {
    "deploy": "cd platform && mix deploy.brain",
    "deploy:brain": "cd platform && mix deploy.brain",
    "deploy:brain:app": "cd platform && mix deploy.brain --app",
    "deploy:brain:container": "cd platform && mix deploy.brain --container",
    "deploy:brain:all": "cd platform && mix deploy.brain --all",
    "deploy:platform": "cd platform && mix deploy.platform",
    "secrets:backup": "cd platform && mix secrets.backup",
    "secrets:restore": "cd platform && mix secrets.restore",
    "secrets:deploy": "cd platform && mix secrets.deploy",
    "secrets:verify": "cd platform && mix secrets.verify"
  },
  "engines": {
    "node": ">=20"
  }
}
