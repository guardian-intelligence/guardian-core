{
  "name": "guardian-core",
  "version": "1.0.0",
  "description": "Guardian Core personal Claude assistant. Lightweight, secure, customizable.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "bun dist/index.js",
    "dev": "bun --hot src/index.ts",
    "auth": "bun src/whatsapp-auth.ts",
    "typecheck": "bun run typecheck:root && bun run typecheck:server",
    "typecheck:root": "tsc --noEmit",
    "typecheck:server": "(cd server && bun run typecheck)",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "CI=1 vitest run --reporter=default",
    "deploy": "bun scripts/deploy.ts",
    "deploy:brain": "bun scripts/deploy.ts",
    "deploy:brain:app": "bun scripts/deploy.ts --app",
    "deploy:brain:container": "bun scripts/deploy.ts --container",
    "deploy:brain:all": "bun scripts/deploy.ts --all",
    "deploy:server": "bun scripts/deploy-server.ts",
    "lint": "bun run lint:root && bun run lint:server",
    "lint:root": "biome check src/ scripts/check-bun-version.ts",
    "lint:server": "(cd server && bun run check)",
    "lint:fix": "bun run lint:root:fix && bun run lint:server:fix",
    "lint:root:fix": "biome check --write src/ scripts/check-bun-version.ts",
    "lint:server:fix": "(cd server && bun run check:fix)",
    "format": "bun run format:root",
    "format:check": "bun run format:root:check",
    "format:root": "biome format --write src/ scripts/check-bun-version.ts",
    "format:root:check": "biome format src/ scripts/check-bun-version.ts",
    "verify:bun": "bun scripts/check-bun-version.ts",
    "check:fast": "bun run verify:bun && bun run lint && bun run typecheck",
    "check": "bun run check:fast && bun run test",
    "secrets:backup": "bun scripts/secrets.ts backup",
    "secrets:restore": "bun scripts/secrets.ts restore",
    "secrets:deploy": "bun scripts/secrets.ts deploy",
    "secrets:verify": "bun scripts/secrets.ts verify"
  },
  "dependencies": {
    "@effect/cli": "^0.73.2",
    "@effect/platform": "^0.94.3",
    "@effect/platform-bun": "^0.87.1",
    "@effect/printer": "^0.47.0",
    "@effect/printer-ansi": "^0.47.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "better-sqlite3": "^11.8.1",
    "cron-parser": "^5.5.0",
    "effect": "^3.19.16",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@effect/vitest": "^0.27.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "bun": ">=1.3.8",
    "node": ">=20"
  },
  "packageManager": "bun@1.3.8"
}
